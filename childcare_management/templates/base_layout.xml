<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="base_layout" name="Childcare Base Layout">
        <t t-call="web.layout">
            <t t-set="head">
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
                <title>Childcare Management</title>
                
                <!-- Bootstrap 4 -->
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"/>
                
                <!-- Font Awesome -->
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
                
                <!-- CSS Personalizado -->
                <link rel="stylesheet" href="/childcare_management/static/src/css/index.css"/>
                
                <style>
                    .main-wrapper {
                        min-height: 100vh;
                        display: flex;
                        flex-direction: column;
                    }
                    .content-wrap {
                        flex: 1;
                    }
                </style>
            </t>
            <t t-raw="head or ''"/>
            
            <body class="bg-light d-flex flex-column min-vh-100">
                <!-- Navbar -->
                <t t-call="childcare_management.navbar"/>
                
                <main class="container py-4 flex-grow-1">
                    <!-- Breadcrumbs -->
                    <t t-call="childcare_management.breadcrumbs"/>
                    
                    <!-- Contenido Principal -->
                    <t t-raw="0"/>
                </main>
                
                <!-- Footer -->
                <footer class="mt-auto">
                    <t t-call="childcare_management.footer"/>
                </footer>
                
                <!-- jQuery y Bootstrap 4 JS -->
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
            </body>
        </t>
    </template>
</odoo>