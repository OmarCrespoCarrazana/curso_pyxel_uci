<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="service_form" name="Service Request Form">
        <form id="newServiceForm" action="/create-service" method="post" 
              onsubmit="if(this.checkValidity()) { $('#serviceModal').modal('hide'); }">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <div class="modal-body">
                <div class="form-group">
                    <label for="serviceName">Service Name</label>
                    <input type="text" class="form-control" id="serviceName" name="name" required="required"/>
                </div>
                <div class="form-group">
                    <label for="childName">Child</label>
                    <select class="form-control" id="childName" name="child" required="required">
                        <option value="">Select a child</option>
                        <option value="John Doe">John Doe</option>
                        <option value="Jane Doe">Jane Doe</option>
                        <option value="Mike Smith">Mike Smith</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="start_date" required="required"/>
                </div>
                <div class="form-group">
                    <label for="serviceStatus">Status</label>
                    <select class="form-control" id="serviceStatus" name="status">
                        <option value="active">Active</option>
                        <option value="pending">Pending</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Request Service</button>
            </div>
        </form>
    </template>
</odoo>