<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="children_page" name="Children">
        <t t-call="childcare_management.base_layout">
            <h1 class="mb-4 fw-bold text-dark">Children</h1>
            
            <div class="row g-4">
                <!-- Child Card 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/childcare_management/static/src/img/child-placeholder-male.jpg" 
                             class="card-img-top" alt="Child"/>
                        <div class="card-body">
                            <h5 class="card-title fw-semibold">John Doe</h5>
                            <div class="card-text">
                                <p class="text-muted mb-1">
                                    <i class="fas fa-birthday-cake me-2"></i>5 years
                                </p>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-users me-2"></i>Kindergarten
                                </p>
                                <p class="text-muted">
                                    <i class="fas fa-calendar-alt me-2"></i>Jan 15, 2024
                                </p>
                            </div>
                            <a href="#" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Child Card 2 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/childcare_management/static/src/img/child-placeholder-female.jpg" 
                             class="card-img-top" alt="Child"/>
                        <div class="card-body">
                            <h5 class="card-title fw-semibold">Jane Doe</h5>
                            <div class="card-text">
                                <p class="text-muted mb-1">
                                    <i class="fas fa-birthday-cake me-2"></i>3 years
                                </p>
                                <p class="text-muted mb-1">
                                    <i class="fas fa-users me-2"></i>Preschool
                                </p>
                                <p class="text-muted">
                                    <i class="fas fa-calendar-alt me-2"></i>Feb 10, 2024
                                </p>
                            </div>
                            <a href="#" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Add New Child -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-dashed bg-light">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <div class="mb-3">
                                <i class="fas fa-plus-circle fa-3x text-primary"></i>
                            </div>
                            <h5 class="card-title mb-3">Add New Child</h5>
                            <p class="text-muted mb-4">Register a new child to the system</p>
                            <a href="#" class="btn btn-outline-primary">
                                Register Child
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>