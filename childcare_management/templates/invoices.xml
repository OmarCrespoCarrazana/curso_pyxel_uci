<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoices_page" name="Invoices">
        <t t-call="childcare_management.base_layout">

            <!-- Usando el componente de tabla reutilizable -->
            <t t-call="childcare_management.reusable_table">
                <t t-set="columns" t-value="[
                    {'title': 'Invoice #', 'field': 'number'},
                    {'title': 'Date', 'field': 'date'},
                    {'title': 'Child', 'field': 'child'},
                    {'title': 'Service', 'field': 'service'},
                    {'title': 'Amount', 'field': 'amount'},
                    {'title': 'Status', 'field': 'status'}
                ]"/>
                <t t-set="data" t-value="[
                    {
                        'number': 'INV-2024-001',
                        'date': '2024-01-15',
                        'child': 'John Doe',
                        'service': 'After School Care',
                        'amount': '$150.00',
                        'status': 'Paid'
                    },
                    {
                        'number': 'INV-2024-002',
                        'date': '2024-02-01',
                        'child': 'Jane Doe',
                        'service': 'Summer Camp',
                        'amount': '$250.00',
                        'status': 'Pending'
                    },
                    {
                        'number': 'INV-2024-003',
                        'date': '2024-02-15',
                        'child': 'John Doe',
                        'service': 'Weekend Activities',
                        'amount': '$75.00',
                        'status': 'Overdue'
                    }
                ]"/>
                <t t-set="actions" t-value="[
                    {'title': 'View', 'icon': 'fa-eye', 'classes': 'btn-outline-info'},
                    
                ]"/>
            </t>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <span class="text-muted">Showing 1 to 3 of 3 entries</span>
                </div>
                <nav aria-label="Invoice pagination">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </t>
    </template>
</odoo>