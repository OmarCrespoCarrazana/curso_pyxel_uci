<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="navbar" name="Childcare Navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand text-primary font-weight-bold" href="/">
                    <i class="fas fa-child mr-2"></i>Childcare Portal
                </a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- Menú principal centrado -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a t-attf-class="nav-link {{ 'active' if page_name == 'children' else '' }}" 
                               href="/childcare">
                                <i class="fas fa-child mr-1"></i>Children
                            </a>
                        </li>
                        <li class="nav-item">
                            <a t-attf-class="nav-link {{ 'active' if page_name == 'medical' else '' }}" 
                               href="/medical-records">
                                <i class="fas fa-heartbeat mr-1"></i>Medical
                            </a>
                        </li>
                        <li class="nav-item">
                            <a t-attf-class="nav-link {{ 'active' if page_name == 'services' else '' }}" 
                               href="/services">
                                <i class="fas fa-list-alt mr-1"></i>Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a t-attf-class="nav-link {{ 'active' if page_name == 'invoices' else '' }}" 
                               href="/invoices">
                                <i class="fas fa-file-invoice-dollar mr-1"></i>Invoices
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Menú de usuario a la derecha -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown" t-if="is_logged_in">
                            <a class="nav-link dropdown-toggle" 
                            href="#" 
                            id="userDropdown" 
                            role="button" 
                            data-toggle="dropdown" 
                            aria-expanded="false">
                                <i class="fas fa-user-circle mr-2"></i>
                                <span t-esc="user.name or user.login"/>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/my/account">
                                    <i class="fas fa-user mr-2"></i>My account
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="/logout">
                                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                                </a>
                            </div>
                        </li>
                        
                        <!-- Botón de login si no está autenticado -->
                        <li class="nav-item" t-else="">
                            <a class="nav-link" href="/portal/login">
                                <i class="fas fa-sign-in-alt mr-1"></i>Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </template>
</odoo>