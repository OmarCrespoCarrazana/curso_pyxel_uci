<odoo>
    <!-- Vista del formulario del wizard -->
    <record id="view_hr_department_confirm_wizard" model="ir.ui.view">
        <field name="name">hr.department.confirm.wizard.form</field>
        <field name="model">hr.department.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Cambio de Estado">
                <group>
                    <field name="message" nolabel="1"/>
                </group>
                <footer>
                    <button string="Aceptar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>