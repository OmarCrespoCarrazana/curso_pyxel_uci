<odoo>


    <!-- Vista Tree para historia clínica -->
    <record id="view_nursery_medical_supply_tree" model="ir.ui.view">
        <field name="name">nursery.medical.supply.tree</field>
        <field name="model">nursery.medical.supply</field>
        <field name="arch" type="xml">
            <tree string="Historia Clínica">
                <field name="product_id"/>
                <field name="min_quantity"/>
                <field name="current_quantity"/>
            </tree>
        </field>
    </record>


    <!-- Vista Form para historia clínica -->
    <record id="view_nursery_clinical_history_form" model="ir.ui.view">
        <field name="name">Insumos Médicos</field>
        <field name="model">nursery.medical.supply</field>
        <field name="arch" type="xml">
            <form string="Historia Clínica">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="min_quantity"/>
                        <field name="current_quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
